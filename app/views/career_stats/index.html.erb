<p id="notice"><%= notice %></p>

<h1>Career Stats</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Reg wins</th>
      <th>Reg losses</th>
      <th>Pts for</th>
      <th>Pts against</th>
      <th>Moves</th>
      <th>Playoff appearances</th>
      <th>Playoffs wins</th>
      <th>Playoffs losses</th>
      <th>Integer</th>
      <th>Championship appearances</th>
      <th>Championship wins</th>
      <th>Championship losses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @career_stats.each do |career_stat| %>
      <tr>
        <td><%= career_stat.team %></td>
        <td><%= career_stat.reg_wins %></td>
        <td><%= career_stat.reg_losses %></td>
        <td><%= career_stat.pts_for %></td>
        <td><%= career_stat.pts_against %></td>
        <td><%= career_stat.moves %></td>
        <td><%= career_stat.playoff_appearances %></td>
        <td><%= career_stat.playoffs_wins %></td>
        <td><%= career_stat.playoffs_losses %></td>
        <td><%= career_stat.integer %></td>
        <td><%= career_stat.championship_appearances %></td>
        <td><%= career_stat.championship_wins %></td>
        <td><%= career_stat.championship_losses %></td>
        <td><%= link_to 'Show', career_stat %></td>
        <td><%= link_to 'Edit', edit_career_stat_path(career_stat) %></td>
        <td><%= link_to 'Destroy', career_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

